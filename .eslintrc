{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "comma-dangle": ["error", "never"],
    "curly": "warn",
    "eol-last": [2, "always"]
  }
}
